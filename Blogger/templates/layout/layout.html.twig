{% extends 'base.html.twig' %}

{% block body %}
     <div class="section">
          <!-- container -->
          <div class="container">
               <!-- row -->
               <div class="row">
                    {% block sidebar %}
                         <div class="col-md-4">

                              <!-- category widget -->
                              <div class="aside-widget">
                                   <div class="section-title">
                                        <h2 class="title">Categories</h2>
                                   </div>
                                   <div class="category-widget">
                                        <ul>
                                             <li><a href="{{ path('blog_index', {'tag' : 'technology'}) }}">Technology</a></li>
                                             <li><a href="{{ path('blog_index', {'tag' : 'news'}) }}">News</a></li>
                                             <li><a href="{{ path('blog_index', {'tag' : 'travel'}) }}">Travel</a></li>
                                        </ul>
                                   </div>
                              </div>
                              <!-- /category widget -->
                              <!-- category widget -->
                              <div class="aside-widget">
                                   <div class="section-title">
                                        <h2 class="title">Blog Date</h2>
                                   </div>
                                   <div class="category-widget">
                                        <ul>
                                             {{ render(controller('App\\Controller\\BlogController::renderBlogDate')) }}
                                        </ul>
                                   </div>
                              </div>
                              <!-- /category widget -->
                         </div>
                    {% endblock %}
                    {% block content %}
                    {% endblock %}
               </div>
               <!-- /row -->
          </div>
          <!-- /container -->
     </div>
{% endblock %}

{% block javascripts %}
     <script>
          $( document ).ready(function() {
               $( "#footer" ).css( "bottom", "0" );
               $( "#footer" ).css( "position", "absolute" );
               $( "#footer" ).css( "width", "100%" );
          });
     </script>
{% endblock %}