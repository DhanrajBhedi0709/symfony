{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block content %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ product.Name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.Category }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.Price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.Quantity }}</td>
            </tr>
            <tr>
                <th>Short_Description</th>
                <td>{{ product.ShortDescription }}</td>
            </tr>
            <tr>
                <th>Long_Description</th>
                <td>{{ product.LongDescription }}</td>
            </tr>
            <tr>
                <th>Small_img</th>
                <td> <img src={{ asset(product.SmallImg) }} alt={{ product.Name }} width=200px;></td>
            </tr>
            <tr>
                <th>Large_img</th>
                <td> <img src={{ asset(product.LargeImg) }} alt={{ product.Name }} width=200px;></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}" ><button class="btn btn-info" style="margin: 5px;">back to list</button></a>

    <a href="{{ path('product_edit', {'id': product.id}) }}"><button class="btn btn-success" style="margin: 5px;">edit</button></a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
